<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_confrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="确定" />

    </RelativeLayout>

    <include layout="@layout/layout_divide" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />


        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />


        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />

        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />

        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />

        <com.buddy.libwheel.wheel.WheelView
            android:id="@+id/wheelView_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            app:wheel_selectColor="@color/wheel_select"
            app:wheel_textSize="20sp" />

    </LinearLayout>


</LinearLayout>
